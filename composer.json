{
    "name": "webei/orkestra",
    "description": "Orchestration for PHP applications",
    "type": "project",
    "license": "MIT",
    "version": "1.0.0",
    "keywords": [
        "orkestra"
    ],
    "scripts": {
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=2048M src/",
        "phpunit": "./vendor/bin/phpunit --testdox",
        "phpunit:coverage": "php -d xdebug.mode=coverage ./vendor/bin/phpunit --coverage-html coverage/"
    },
    "autoload": {
        "psr-4": {
            "Orkestra\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Luc-cpl",
            "email": "lucas.carvalhopl@outlook.com"
        }
    ],
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.4"
    },
    "require": {
        "php": ">=8.0",
        "php-di/php-di": "^7.0",
        "symfony/console": "^6.3",
        "symfony/process": "^6.3",
        "league/route": "^5.1",
        "laminas/laminas-diactoros": "^3.3",
        "laminas/laminas-httphandlerrunner": "^2.9",
        "rakit/validation": "^1.4",
        "twig/twig": "^3.0",
        "twig/markdown-extra": "^3.7"
    }
}
